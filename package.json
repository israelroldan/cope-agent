{
  "name": "cope-agent",
  "version": "0.1.0",
  "description": "COPE - Personal executive assistant with dynamic context composition",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "cope-agent": "./dist/cli.js"
  },
  "scripts": {
    "build": "./scripts/build.sh",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "mcp": "node dist/mcp-server.js",
    "mcp:dev": "tsx src/mcp-server.ts",
    "mcpb": "node dist/mcpb-server.js",
    "mcpb:dev": "tsx src/mcpb-server.ts",
    "serve": "node dist/http-server.js",
    "serve:dev": "tsx src/http-server.ts",
    "typecheck": "tsc --noEmit",
    "bundle": "./scripts/bundle.sh",
    "bundle:clean": "rm -rf bundle cope-agent.mcpb",
    "bundle:validate": "node scripts/validate-manifest.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "chalk": "^5.3.0",
    "dotenv": "^17.2.3",
    "ora": "^8.0.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "env-vars-doctor": "^1.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
