{
  "name": "cope-agent",
  "version": "0.1.0",
  "description": "COPE - Personal executive assistant with dynamic context composition",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "cope-agent": "./dist/cli.js"
  },
  "scripts": {
    "build": "./scripts/build.sh",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "mcp": "node dist/mcp-server.js",
    "mcp:dev": "tsx src/mcp-server.ts",
    "serve": "node dist/http-server.js",
    "serve:dev": "tsx src/http-server.ts",
    "typecheck": "tsc --noEmit",
    "studio": "sanity dev",
    "studio:build": "sanity build",
    "menubar": "cd menubar-app && npm start",
    "menubar:install": "cd menubar-app && npm install",
    "menubar:dist": "cd menubar-app && npm run dist:mac"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@sanity/client": "^7.14.0",
    "chalk": "^5.3.0",
    "dotenv": "^17.2.3",
    "ora": "^8.0.1",
    "styled-components": "^6.3.8",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@sanity/vision": "^5.4.0",
    "@types/node": "^20.10.0",
    "env-vars-doctor": "^1.4.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sanity": "^5.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
